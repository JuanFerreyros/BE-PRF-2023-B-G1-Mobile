<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addRequestFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    tools:context=".fragments.NewRequestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="379dp"
            android:layout_height="456dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#D7E1F0"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_Solicitud"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/rqt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/name"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/txt_rqt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginEnd="28dp"
                    android:ems="10"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/rqt_name"
                    app:layout_constraintTop_toTopOf="@+id/rqt_name" />

                <TextView
                    android:id="@+id/rqt_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/model"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rqt_name" />

                <EditText
                    android:id="@+id/txt_rqt_model"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginEnd="28dp"
                    android:ems="10"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/model"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rqt_model" />

                <TextView
                    android:id="@+id/rqt_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/brand"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rqt_model" />

                <EditText
                    android:id="@+id/txt_rqt_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginEnd="28dp"
                    android:ems="10"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/brand"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rqt_brand" />

                <TextView
                    android:id="@+id/rqt_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/serial_number"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rqt_brand" />

                <EditText
                    android:id="@+id/txt_rqt_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginEnd="28dp"
                    android:ems="10"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/serial_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rqt_serial_number" />

                <TextView
                    android:id="@+id/rqt_latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/latitude"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rqt_serial_number" />

                <EditText
                    android:id="@+id/txt_rqt_latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginEnd="28dp"
                    android:ems="10"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/latitude"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rqt_latitude" />

                <TextView
                    android:id="@+id/rqt_longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/longitude"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rqt_latitude" />

                <EditText
                    android:id="@+id/txt_rqt_longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginEnd="28dp"
                    android:ems="10"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/longitude"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rqt_longitude" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="247dp"
            android:layout_height="137dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="82dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorBtnApprove"
                android:fontFamily="@font/product_sans_bold"
                android:text="@string/request"
                app:layout_constraintBottom_toTopOf="@+id/btn_suspend"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_suspend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="66dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#F44336"
                android:fontFamily="@font/product_sans_bold"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_edit" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
