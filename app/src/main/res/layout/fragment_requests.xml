<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.RequestsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    android:id="@+id/fragment_requests">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleRequests"
        android:layout_width="410dp"
        android:layout_height="687dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goToNewRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:contentDescription="@string/request"
        app:backgroundTint="@color/colorPrimaryVariantLight"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_requests"
        app:layout_constraintEnd_toEndOf="@+id/fragment_requests"
        app:srcCompat="@drawable/ic_new_request" />

</androidx.constraintlayout.widget.ConstraintLayout>